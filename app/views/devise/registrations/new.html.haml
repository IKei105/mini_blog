- content_for :title, "新規登録ページ - ミニブログ"

%body.registrations
  .main-container
    %h2.signup-page__title 新規登録

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-page__form" }) do |f|
      = render "devise/shared/error_messages", resource: resource

      .signup-page__account-info
        .signup-page__field
          = f.label :userid, "ユーザーID", for: "user_userid"
          %span.signup-page__note (アルファベットのみ)
          %br/
          = f.text_field :userid, autofocus: true, autocomplete: "username"

        .signup-page__field
          = f.label :password, "パスワード"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password"

        .signup-page__field
          = f.label :password_confirmation, "再度パスワードを入力"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"


      .signup-page__profile-info
        .signup-page__field
          = f.label :introduction, "自己紹介"
          %br/
          = f.text_area :introduction, maxlength: 200

        .signup-page__field
          = f.label :blog_url, "ブログURL"
          %br/
          = f.text_field :blog_url

      .signup-page__actions
        = f.submit "登録", class: "btn btn-primary"

    = render "devise/shared/links"
